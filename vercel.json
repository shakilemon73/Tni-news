{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/((?!assets|api|favicon|logo|og-|_vercel).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/article/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "index, follow"
        },
        {
          "key": "Vary",
          "value": "User-Agent"
        }
      ]
    }
  ],
  "functions": {
    "api/*.ts": {
      "memory": 256,
      "maxDuration": 10
    }
  }
}
